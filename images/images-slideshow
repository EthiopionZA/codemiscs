#! /usr/bin/env bash

# Relies in ImageMagick's *convert*

(( $# == 0 )) && echo "Usage: WidthxHeight Images ... SlideshowProduct.gif"

size="$1"
slideshow="${@:$#}"

unification="$(images-unify "${@:1:$#-1}")"
echo "$unification"

convert -alpha off -scale "$size"\! -delay 50 -loop 0 "$unification"/* "$slideshow"
echo "$slideshow"

